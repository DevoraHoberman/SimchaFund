@model HistoryViewModel

<div class="container">
    <main role="main" class="pb-3" style="margin-top: 60px;">

        <div class="header">
            <h1>History for @Model.Name</h1>
            <h3>Current Balance: @Model.Balance.ToString("C")</h3>
        </div>

        <div class="row header">
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>Action</th>
                        <th>Date</th>
                        <th>Amount</th>
                    </tr>
                    @foreach (var h in Model.Histories)
                    {
                        <tr>
                            <td>@h.Action</td>
                            <td>@h.Date.ToLongDateString()</td>
                            <td>@h.Amount.ToString("C")</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        <div style="text-align:center;">
            <a class="btn-lg btn-danger" href="/contributors">Back to Contributors</a>
        </div>
    </main>
</div>